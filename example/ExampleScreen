package catgames.views;

import android.graphics.Canvas;
import android.view.View;

import catgames.framework.Image;
import catgames.main.Camera;
import catgames.main.MainActivity;
import catgames.main.R;
import catgames.main.Screen;
import catgames.main.Settings;

public class ExampleScreen extends Screen {

    Image logo;
    int timer;

    public void load() {

        logo = new Image(R.drawable.logo);

    }


    public void repeat() {

        timer ++;
        if (timer > 60) {      // switches to screen 1 after 1 sec
            Camera.setScreen(1);
        }

        logo.draw();

    }

}
